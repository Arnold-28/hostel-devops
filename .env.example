# MongoDB must use the Docker service name `mongo` exactly (spec requirement)
MONGO_URI=mongodb://mongo:27017/hostelops

# JWT
JWT_SECRET=change_me_to_a_long_random_secret
JWT_EXPIRES_IN=7d

# Optional: bootstrap a default admin user at backend startup
# If you leave these blank, you can still register students and test student flows.
ADMIN_NAME=Hostel Admin
ADMIN_EMAIL=admin@hostelops.local
ADMIN_PASSWORD=ChangeMe123!
